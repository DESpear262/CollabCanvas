rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /canvas/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /presence/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}


